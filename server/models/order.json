  },
  "properties": {
    "date": {
      "type": "date",
      "required": true
    },
    "status": {
      "type": "string"
    },
    "paymentId": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "amount": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "invoices": {
      "type": "hasMany",
